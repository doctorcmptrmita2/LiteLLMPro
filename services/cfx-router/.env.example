# CF-X Router Environment Variables

# Database
DATABASE_URL=postgresql://cfx:cfx_password@localhost:5432/cfx_db

# LiteLLM
LITELLM_BASE_URL=http://localhost:4000

# Security
HASH_SALT=your-secure-random-salt-here

# Rate Limiting
DAILY_REQUEST_LIMIT=1000
MAX_CONCURRENT_STREAMS=2

# Timeouts (seconds)
CONNECT_TIMEOUT=10
READ_TIMEOUT=120

# Circuit Breaker
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_RECOVERY_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
